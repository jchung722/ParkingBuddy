<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dev.ada.parkingbuddy.HelpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hydrantbig"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="How to be a Parking Buddy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView3"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:textColor="?attr/colorPrimaryDark"
                android:textAlignment="center" />

            <TextView
                android:text="Parking Buddy is a street parking app that is backed by data provided by the community. Here's how you can help!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textSize="18sp"
                android:textColor="?android:attr/editTextColor"
                android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp" />

            <TextView
                android:text="Add:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/textView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:textAlignment="center" />

            <TextView
                android:text="Tap on the map to add a fire hydrant."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/textView5"
                android:layout_alignEnd="@+id/textView3" />

            <TextView
                android:text="Move:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:id="@+id/textView8"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:layout_below="@+id/textView10"
                android:layout_centerHorizontal="true"
                android:textAlignment="center" />

            <TextView
                android:text="Notice a fire hydrant in the wrong location? Click and hold to drag and drop it into place."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/textView8"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Remove:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:layout_below="@+id/textView11"
                android:layout_centerHorizontal="true"
                android:textAlignment="center" />

            <TextView
                android:text="Tap an existing fire hydrant to remove from map."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_alignStart="@+id/textView10"
                android:id="@+id/textView12"
                android:textSize="18sp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
